<div class='col-md-4'>
  <div class='card'>
    <img
      class='card-img-top'
      src='{{this.image_url}}'
      alt='{{this.name}} {{this.lastName}}'
    />
    <p>{{this.name}}</p>
    <div class='card-body'>
      <h5 class='card-title'>
        {{this.tagline}}
      </h5>
      <p class='card-text'>
        {{this.description}}
      </p>
    </div>
  </div>
</div>