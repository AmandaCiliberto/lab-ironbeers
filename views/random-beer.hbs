{{#each beer}}
<div class='card' style="margin: 50px;">
  <div class='row g-0'>
    <div class="col-md-4">
      <img
            class='card-img-top'
            src='{{this.image_url}}'
            alt='{{this.name}}'
          />
    </div>

    <div class="col-md-8">
      <div class='card-body'>
        <h3 class="card-title">{{this.name}}</h3>
        <h5 class='card-title'>
         {{this.tagline}}
        </h5>
        <p class='card-text'>
          {{this.description}}
        </p>

        <div>
            <strong>Food Pairing</strong>
        </div>
        <ul class="list-group">
          <li class="list-group-item">
            {{this.food_pairing}} 
          </li>
        </ul> 
        

        <p class="card-text" style="margin-top: 24px;"><strong>
          Brewers Tips: 
        </strong>
          {{this.brewers_tips}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}